FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default none;
}

gradSchemes
{
    default         none;
    //grad(c_mR)      Gauss linear snGradc_mR;
    grad(c_mR)      leastSquares;
}

divSchemes
{
    default             none;
}

laplacianSchemes
{
    default         none;
    laplacian(sqr((1|deltaCoeffs)),grad(c_mR)) Gauss linear uncorrected;
}

interpolationSchemes
{
    default        none;
    interpolate(grad(c_mR)) downwind snGradc_mR; //linear;
    // the following is for laplacian smoothing of gradc_m
    interpolate((grad(c_mR)+laplacian(sqr((1|deltaCoeffs)),grad(c_mR)))) downwind snGradc_mR;
    interpolate((grad(c_mR)+(0.2*laplacian(sqr((1|deltaCoeffs)),grad(c_mR))))) downwind snGradc_mR;
}

snGradSchemes
{
    default         none;
    snGrad(c_mR)    uncorrected; // (only needed for the direction)
}

fluxRequired
{
    default         no;
}


