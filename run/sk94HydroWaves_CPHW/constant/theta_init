FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "constant";
    object      thetaStat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 315;

boundaryField
{
    ground
    {
        type            fixedGradient;
        gradient        uniform -0.003211;
    }
    top
    {
        type            fixedGradient;
        gradient        uniform 0.0035555937;
    }
    inlet
    {
    	type		cyclic;
    }
    outlet
    {
    	type		cyclic;
    }
    front
    {
    	type		cyclic;
    }
    back
    {
    	type		cyclic;
    }
}


