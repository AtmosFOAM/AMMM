FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}
offCentre 0.5;
SIgravityWaves false;

gradSchemes
{
    default         none;
//    linearUpwind    Gauss linear;
    grad(thetaRho)  Gauss linear;
//    grad(theta)  Gauss linear;
//    grad(qv)        Gauss linear;
//    grad(ql)        Gauss linear;
}

divSchemes
{
    default             Gauss none;
    div(U,thetaRho)     Gauss cubicUpwindCPCFit 3; //linearUpwind linearUpwind;
    div(U,qv)           Gauss cubicUpwindCPCFit 3; //linearUpwind linearUpwind;
    div(U,ql)           Gauss cubicUpwindCPCFit 3; //linearUpwind linearUpwind;
    div(U,u)            Gauss cubicUpwindCPCFit 3; //linearUpwind linearUpwind;
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default        midPoint;
}

snGradSchemes
{
    default         none;
    snGrad(Exner)   uncorrected;
}

fluxRequired
{
    default         no;
    Exner;
}


